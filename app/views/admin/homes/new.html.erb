      <div class="field">
        <%= form.label :room_empty %>
        <%= form.number_field :room_empty, class: "form-control" %>
      </div>

      <div class="field">
        <%= form.label :description %>
        <%= form.text_area :description, class: "form-control" %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
