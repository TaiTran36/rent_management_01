<div id="login">
  <div class="col-sm-10 well">
    <div class="">
      THÊM PHÒNG MỚI
    </div>
  <div class="row">
      <%= form_for @admin_room, url: admin_homes_create_room_path, html: { multipart: true } do |form| %>
        <% if @admin_room.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@admin_room.errors.count, "error") %> prohibited this admin_home from being saved:</h2>

            <ul>
            <% @admin_room.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

       <div class="field">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form-control"%>
        </div>

        <div class="field">
          <%= form.label :area %>
          <%= form.number_field :area, class: "form-control" %>
        </div>

        <div class="field">
          <%= form.label :number_room %>
          <%= form.number_field :number_room, class: "form-control" %>
        </div>

        <%= @home.id%>
        <%= form.hidden_field :home_id, :value => @home.id%>

        <div class="field">
          <%= form.label :state %>
          <%= form.text_field :state, class: "form-control" %>
        </div>

        <div class="field">
          <%= form.label :price %>
          <%= form.number_field :price, class: "form-control" %>
        </div>
        <div class="field">
          <%= form.label :description %>
          <%= form.text_area :description, class: "form-control" %>
        </div>

        <div class="field">
          <%= form.label :image %>
          <%= form.file_field :image, class: "form-control" %>
        </div>


        <div class="actions">
          <%= form.submit %>
        </div>
      <% end %>


    </div>
  </div>
</div>


