<div id="login">
  <div class="col-sm-10 well">
    <div class="alert alert-info text-center">
      THÊM PHÒNG MỚI
    </div>
    <div class="row">
      <%= form_for @admin_room, url: admin_homes_create_room_path, html: { multipart: true } do |form| %>
      <% if @admin_room.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@admin_room.errors.count, "error") %> prohibited this admin_home from being saved:</h2>

        <ul>
          <% @admin_room.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <%= @home.id%>
      <%= form.hidden_field :home_id, :value => @home.id%>
      <div class="field">
        <%= form.label t(".nr_a") %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <div class="field">
        <%= form.label t(".nr_b") %>
        <%= form.number_field :area, class: 'form-control' %>
      </div>

      <div class="field">
        <%= form.label t(".nr_c") %>
        <%= form.number_field :number_room, class: 'form-control' %>
      </div>

      <div class="field">
        <%= form.label t(".nr_d") %>
        <%= form.text_field :state, class: 'form-control' %>
      </div>

      <div class="field">
        <%= form.label t(".nr_e") %>
        <%= form.number_field :price,  class: 'form-control' %>
      </div>
      <div class="field">
        <%= form.label t(".nr_f") %>
        <%= form.text_area :description, class: 'form-control' %>
      </div>

      <div class="field">
        <%= form.label t(".nr_g") %>
        <%= form.file_field :image, class: 'form-control' %>
      </div>
    </div>
    <div class="actions">
      <%= form.submit t(".nr_h") %>
    </div>
    <%end%>
  </div>
</div>


