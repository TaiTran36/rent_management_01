    </div>
  <div class="row">
      <%= form_for @admin_home, url: admin_homes_path do |form| %>
      <% if @admin_home.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@admin_home.errors.count, "error") %> prohibited this admin_home from being saved:</h2>

          <ul>
          <% @admin_home.errors.full_messages.each do |message| %>
