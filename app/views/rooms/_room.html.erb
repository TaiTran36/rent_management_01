<div class="row">
  <div class="col-sm-3" >
    <div class="imgPost">
      <a href="#"><%= image_tag "imgHouse/post1.jpg" %></a>
    </div>
  </div>
  <div class="col-sm-8">
    <div class="well">
      <div class="labelPost">
        <%= form_for :room do |f| %>
          <%= f.label :Area %>
          <%= f.label :Numberroom %>
          <%= f.label :Price %>
        <% end %>
      </div>
      <div class="contentPost">
        <div class="list-product">
          <div class="row">
            <%= room.area %>
          </div>
          <div class="row">
            <%= room.number_room %>
          </div>
          <div class="row">
            <%= room.price %>
          </div>
        </div>
      </div>
      <button class="btn submit"><span class="glyphicon glyphicon-check"></span><%= if logged_in? 
        (link_to "Đặt phòng", controller: "rooms", action: "bookroom", id: room.id)
        else (link_to "Đặt phòng", controller: "sessions", action: "create") 
        end %></button>
      <button class="btn detail"><span class="glyphicon glyphicon-th-list"></span><%= if logged_in? 
        (link_to "Chi tiết", controller: "rooms", action: "show", id: room.id) 
        else (link_to "Chi tiết", controller: "sessions", action: "create") 
        end %>
      </button>
    </div>
  </div>
</div>
<hr>
