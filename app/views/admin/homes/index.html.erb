<div id="page-inner">
  <div class="row">
    <div class="col-lg-12">
    <div class="panel panel-primary">
      <div class="panel-heading"><i class="fa fa-list"></i> DANH SÁCH KHU TRO</div>
      <div class="panel-body">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Address</th>
              <th>Room_number</th>
              <th>Room_empty</th>
              <th>Description</th>
              <th>Chi tiết phòng</th>
              <th>Tác vụ</th>
            </tr>
          </thead>
          <tbody>
            <% if(@homes.nil?) %>
                <%= paginate @homes, theme: "twitter-bootstrap-3" %>
                <%= render partial: "home",  collection: @homes, as: "home" %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <button class="btn btn-success"><i class="fa fa-plus"> <%= link_to 'THÊM KHU TRỌ', new_admin_home_path %></i></button>
    </div>
  </div>
  <hr />
</div>
