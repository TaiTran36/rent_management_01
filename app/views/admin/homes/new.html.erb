<%
    def options_for_district
  [
    ['Quận Ba Đình','1'],
    ['Quận Hoàn Kiếm','2'],
    ['Quận Hai Bà Trưng','3'],
    ['Quận Đống Đa','4'],
    ['Quận Tây Hồ','5'],
    ['Quận Cầu Gíây','6'],
    ['Quận Thanh Xuân','7'],
    ['Quận Hoàng Mai','8'],
    ['Quận Long Biên','9'],
    ['Quận Hà Đông','10'],
    ['Huyện Thanh Trì','11'],
    ['Huyện Gia Lâm','12'],
    ['Huyện Đông Anh','13'],
    ['Huyện Sóc Sơn','14'],
    ['Thị xã Sơn Tây','15']
  ]
end
%>
<div >
  <div class="col-sm-10 well">
    <div class="alert alert-info text-center">
      THÊM KHU TRỌ MỚI
      <%= form_for @admin_home, url: admin_homes_path do |form| %>
      <% if @admin_home.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@admin_home.errors.count, t(".n_error")) %> <%= t(".n_f") %></h2>
        <ul>
          <% @admin_home.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <div class="field">
        <%= form.label t(".n_g") %>
        <%= form.select :district, options_for_district, {}, prompt: 'Chọn quận (huyện)' %>
      </div>
      <div class="field">
        <%= form.label t(".n_a") %>
        <%= form.text_field :address,  class: 'form-control' %>
      </div>
      <div class="field">
        <%= form.label t(".n_b") %>
        <%= form.number_field :room_number,  class: 'form-control' %>
      </div>
      <%= form.hidden_field :user_id, :value => current_user.id%>
      <div class="field">
        <%= form.label t(".n_c") %>
        <%= form.number_field :room_empty,  class: 'form-control' %>
      </div>
      <div class="field">
        <%= form.label t(".n_d") %>
        <%= form.text_area :description,  class: 'form-control' %>
      </div>
      <div class="actions">
        <%= form.submit t(".n_e"), class: 'btn btn-info' %>
      </div>
      <%end%>
    </div>
  </div>
</div>
