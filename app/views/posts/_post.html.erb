<div class="posts">
  <div class="list-post">
    <% @user = User.find_by id: post.user_id %>
    <h3><%= @user.name %></h3>
    <span class="glyphicon glyphicon-time"></span><%= time_ago_in_words(post.created_at) %>
    <h5><span class="label label-danger"><%= t ".house"%></span> <span class="label label-primary"><%= t ".public"%></span></h5>
    <div class="content">
      <h3><%= post.content%></h3>
    </div>
    <button class="btn comment"><%= link_to "Comment", controller: "posts", action: "show", id: post.id%></button>
  </div>
</div>

